<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Report-sida{% endblock %}</title>
        {# <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> #}
        <link rel="icon" href="{{ asset('img/arsenal.png') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>

        <nav class="navbar navbar-expand bg-primary navbar-dark mb-4">
            <div class="container">
              <a class="navbar-brand" href="#">Kims rapportsida</a>
          
              <ul class="navbar-nav ms-auto d-flex flex-row flex-wrap gap-3">
                <li class="nav-item">
                  <a class="nav-link{% if app.request.attributes.get('_route') == 'home' %} active{% endif %}" href="{{ path('home') }}">Hem</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link{% if app.request.attributes.get('_route') == 'about' %} active{% endif %}" href="{{ path('about') }}">Om</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link{% if app.request.attributes.get('_route') == 'report' %} active{% endif %}" href="{{ path('report') }}">Redovisning</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link{% if app.request.attributes.get('_route') == 'lucky' %} active{% endif %}" href="{{ path('lucky') }}">Lucky</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{% if app.request.attributes.get('_route') == 'api' %} active{% endif %}" href="{{ path('api') }}">Api</a>
                  </li>
              </ul>
            </div>
          </nav>
        <main class="container py-4 px-3">
        {% block body %}{% endblock %}
        </main>

        <footer class="bg-dark text-white text-center py-3 mt-4">
        <div class="container">
            <small>&copy; 2025 Kims rapportsida</small>
        </div>
        </footer>
    </body>
</html>
